<div class="container rar-summary">
    <div class="row">
        <div class="center-title">
          <h2>Check your purchase details!</h2>
        </div>
    </div>
    <div class="row">

        <!-- SIDEBAR -->
        <div class="col-md-12 ">
            <div class="card">
                <h2>Reservation Summary</h2>
                <div class="clearfix">
                    <h5 class="pull-left"><%= name %></h5>
                </div>

                <div class="clearfix">

                    <div class="card-content">
                        <p class="main">Check in</p>
                        <p class="base">From 15.00h</p>
                    </div>

                    <div class="card-content">
                        <p class="main">Check out</p>
                        <p class="base">Before 12.00h</p>
                    </div>

                    <div class="card-content">
                        <p class="main">Reservation dates</p>
                        <p class="base">From <strong><span id="checkin-summary"><%= checkin %></span></strong> to <strong id="checkout-summary"><%= checkout %></strong></p>
                    </div>

                    <div class="card-content">
                        <p class="main">People</p>
                        <p class="base" id="adults-summary"><%= adults %> Adults</p>
                        <p class="base" id="children-summary"><%=children %> Children</p>
                    </div>

                    <div class="card-checkout clearfix">
                        <div class="left pull-left">
                            <p class="main">Total</p>
                            <p class="base"><a href="#">Price details ></a></p>
                        </div>
                        <div class="right pull-right">
                              <% if (isPromoValid === true) { %>
                              <p class="main line-through">€ <%= price %> </p>
                              <p class="main">€ <%= price * postPromo / 100 %> </p>
                             <% } else { %>
                              <p class="main">€ <%= price %> </p>
                             <% } %>
                        </div>
                        <button type="submit" value="Submit" href="#" name="reserve"   class="btn btn-primary btn-group-justified">Reserve and proceed to payment</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


